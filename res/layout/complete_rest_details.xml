<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:addStatesFromChildren="true"
      android:background="#ffffff"
      android:clipChildren="false" >
             
  <RelativeLayout 
      android:id="@+id/RelativeLayout01"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >
               <TextView
                   android:id="@+id/rest_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:gravity="center"
                   android:text="RestaurantName"
                   android:textSize="18sp"
                   android:textStyle="bold" />
  <TextView
                android:id="@+id/rest_addres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/rest_name"
             android:text="RestaurantAddress"
             android:textSize="16sp"
             
                />
  
  <TextView
                android:id="@+id/restType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/rest_addres"
             android:text="Restaurant Type: "
             android:textSize="16sp"
             
                />
  <TextView
                android:id="@+id/rest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/rest_addres"
       		 android:layout_toRightOf="@+id/restType"
       		  android:layout_toEndOf="@+id/restType"
             android:text="Restaurant Type: "
             android:textSize="16sp"
             
                />
  <TextView
                android:id="@+id/open_hours_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/restType"
       		   android:text="Opening Hours "
             android:textSize="16sp"
             android:background="#b7c723"
             
                />
  
  <TextView
                android:id="@+id/sundayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/open_hours_text"
       		   android:text="Sunday: 	"
             android:textSize="16sp"
            
             
                />
  
  <TextView
                android:id="@+id/sundayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/open_hours_text"
       		  android:layout_toRightOf="@+id/sundayText"
       		  android:layout_toEndOf="@+id/sundayText"
       		  
             android:textSize="16sp"
            
             
                />
  <TextView
                android:id="@+id/mondayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/sundayText"
       		   android:text="Monday: 	"
             android:textSize="16sp"
            
             
                />
  
  <TextView
                android:id="@+id/mondayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/sundayText"
       		  android:layout_toRightOf="@+id/mondayText"
       		  android:layout_toEndOf="@+id/mondayText"
       		  
             android:textSize="16sp"
            
             
                /> 
                
   <TextView
                android:id="@+id/tuesdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/mondayText"
       		   android:text="Tuesday: 	"
             android:textSize="16sp"
            
             
                />
  
  <TextView
                android:id="@+id/tuesdayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/mondayText"
       		  android:layout_toRightOf="@+id/tuesdayText"
       		  android:layout_toEndOf="@+id/tuesdayText"
       		  
             android:textSize="16sp"
            
             
                /> 
                
                
                
                
                
                <TextView
                android:id="@+id/wednesdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/tuesdayText"
       		   android:text="Wednesday: 	"
             android:textSize="16sp"
            
             
                />
  
  <TextView
                android:id="@+id/wednesdayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/tuesdayText"
       		  android:layout_toRightOf="@+id/wednesdayText"
       		  android:layout_toEndOf="@+id/wednesdayText"
       		  
             android:textSize="16sp"
            
             
                /> <TextView
                android:id="@+id/thursdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/wednesdayText"
       		   android:text="Thursday: 	"
             android:textSize="16sp"
            
             
                />
  
  <TextView
                android:id="@+id/thursdayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/wednesdayText"
       		  android:layout_toRightOf="@+id/thursdayText"
       		  android:layout_toEndOf="@+id/thursdayText"
       		  
             android:textSize="16sp"
            
             
                /> <TextView
                android:id="@+id/fridayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/thursdayText"
       		   android:text="Friday: 	"
             android:textSize="16sp"
            
             
                />
  
  <TextView
                android:id="@+id/fridayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/thursdayText"
       		  android:layout_toRightOf="@+id/fridayText"
       		  android:layout_toEndOf="@+id/fridayText"
       		  
             android:textSize="16sp"
            
             
                /> <TextView
                android:id="@+id/satdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/fridayText"
       		   android:text="Saturday: 	"
             android:textSize="16sp"
            
             
                />
  
  <TextView
                android:id="@+id/satdayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/fridayText"
       		  android:layout_toRightOf="@+id/satdayText"
       		  android:layout_toEndOf="@+id/satdayText"
       		  
             android:textSize="16sp"
            
             
                />
  
   <TextView
                android:id="@+id/facility_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
       		  android:layout_marginTop="3dp"
       		 android:layout_below="@+id/satdayText"
       		   android:text="Facilities Available "
             android:textSize="16sp"
             android:background="#b7c723"
             
                />
   </RelativeLayout>
   <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/RelativeLayout01"/>
              </RelativeLayout>

