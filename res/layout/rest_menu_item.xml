<!-- android:background = "@drawable/selector_menu_list_item" -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/rest_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:visibility="gone"
         />
<TextView
     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AED"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/rest_item_price"
        android:layout_toStartOf="@+id/rest_item_price"
        android:id="@+id/aedText"
        android:paddingRight="5dp"
       android:paddingTop="10dp"
        /> 
<TextView
        android:id="@+id/rest_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
    
      android:textSize="30sp"
      android:paddingRight="5dp"
      android:paddingEnd="5dp"
        android:text="28.00"
       
         />

<TextView
    android:id="@+id/rest_item_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/aedText"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
     android:layout_alignParentLeft="true"
    android:text="name"
    android:textSize="18sp"
    />

</RelativeLayout>
